<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >




            <FrameLayout
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:id="@+id/frameLayout"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="3dp">

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:id="@+id/imgView"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/cover"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/frameLayout1"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="60dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile1"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

            </FrameLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/frameLayout"
                >

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="#4a5a71"
                    android:layout_marginLeft="10dp"></LinearLayout>
                <include layout="@layout/entry1"
                    android:id="@+id/entry1"
                    />

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="#4a5a71"
                    android:layout_marginLeft="10dp"></LinearLayout>


                <include layout="@layout/entry1"
                    android:id="@+id/entry2"
                    />
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="#4a5a71"
                    android:layout_marginLeft="10dp"></LinearLayout>

                <include layout="@layout/entry1"
                    android:id="@+id/entry3"
                    />
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="#4a5a71"
                    android:layout_marginLeft="10dp"></LinearLayout>

                <include layout="@layout/entry1"
                    android:id="@+id/entry4"
                    />

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="#4a5a71"
                    android:layout_marginLeft="10dp"></LinearLayout>
                <include layout="@layout/entry1"
                    android:id="@+id/entry5"
                    />

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="#4a5a71"
                    android:layout_marginLeft="10dp"></LinearLayout>
            </LinearLayout>


        </RelativeLayout>




























        <!--
            <ImageView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/logo" />-->
        <!--
            <include
                layout="@layout/app_bar_front_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent" /> -->




    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_front_activity"
        app:menu="@menu/activity_front_activity_drawer" />

</android.support.v4.widget.DrawerLayout>
